{
  "name": "kollavarsham",
  "version": "2.3.1",
  "description": "Convert Gregorian date to Kollavarsham date and vice versa",
  "homepage": "http://kollavarsham.org",
  "repository": {
    "url": "https://github.com/kollavarsham/kollavarsham-js.git"
  },
  "author": {
    "name": "The Kollavarsham Team",
    "email": "info@kollavarsham.org",
    "url": "https://kollavarsham.org"
  },
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "engineStrict": true,
  "engines": {
    "node": ">= 10",
    "npm": ">= 6"
  },
  "jsii": {
    "excludeTypescript": [
      "test/**"
    ],
    "outdir": "dist",
    "versionFormat": "full",
    "targets": {
      "java": {
        "package": "org.kollavarsham.converter",
        "maven": {
          "groupId": "org.kollavarsham.converter",
          "artifactId": "kollavarsham-converter"
        }
      },
      "python": {
        "distName": "kollavarsham",
        "module": "kollavarsham"
      },
      "dotnet": {
        "namespace": "KollavarshamOrg",
        "packageId": "KollavarshamOrg.Converter",
        "iconUrl": "https://kollavarsham.org/static/images/logo.png"
      }
    }
  },
  "keywords": [
    "kollavarsham",
    "malayalam",
    "calendar",
    "malayalam era",
    "gregorian calendar",
    "hindu calendar",
    "solar calendar",
    "lunar calendar",
    "sidereal calendar",
    "chingam",
    "kanni",
    "thulam",
    "vrischikam",
    "dhanu",
    "makaram",
    "kumbham",
    "meenam",
    "medam",
    "idavam",
    "mithunam",
    "karkitakam"
  ],
  "devDependencies": {
    "@kollavarsham/gulp-coveralls": "^0.5.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "chai": "^4.3.6",
    "del": "^6.0.0",
    "eslint": "^8.11.0",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "gulp-exclude-gitignore": "^1.2.0",
    "gulp-gh-pages": "^0.6.0-6",
    "gulp-jsdoc3": "^3.0.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "jsii": "^1.54.0",
    "jsii-pacmak": "^1.55.0",
    "jsii-release": "^0.2.287",
    "mocha": "^9.2.2",
    "nyc": "^15.1.0",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.2"
  },
  "mocha": {
    "bail": true,
    "colors": true,
    "full-trace": true,
    "recursive": true,
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "spec": "./test/**/*.spec.ts"
  },
  "nyc": {
    "include": [
      "lib/**/*.ts",
      "lib/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "test/**/*.spec.ts",
      "gulpfile.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text-summary",
      "text"
    ],
    "temp-directory": "./coverage/.nyc_output"
  },
  "scripts": {
    "build": "gulp clean:jsii && jsii -vvv",
    "build:watch": "jsii -w",
    "package": "gulp clean:dist && jsii-pacmak -vvv",
    "prepublishOnly": "gulp prepublish",
    "test": "gulp clean:jsii && TS_NODE_PROJECT=tsconfig.spec.json nyc mocha"
  },
  "license": "MIT",
  "stability": "stable"
}

{
  "name": "kollavarsham",
  "version": "1.5.1",
  "description": "Convert Gregorian date to Kollavarsham date and vice versa",
  "homepage": "http://kollavarsham.org",
  "repository": {
    "type": "git",
    "url": "kollavarsham/kollavarsham-js"
  },
  "author": {
    "name": "The Kollavarsham Team",
    "email": "info@kollavarsham.org",
    "url": "https://kollavarsham.org"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "engineStrict": true,
  "engines": {
    "node": ">= 8",
    "npm": ">= 6"
  },
  "keywords": [
    "kollavarsham",
    "malayalam",
    "calendar",
    "malayalam era",
    "gregorian calendar",
    "hindu calendar",
    "solar calendar",
    "lunar calendar",
    "sidereal calendar",
    "chingam",
    "kanni",
    "thulam",
    "vrischikam",
    "dhanu",
    "makaram",
    "kumbham",
    "meenam",
    "medam",
    "idavam",
    "mithunam",
    "karkitakam"
  ],
  "devDependencies": {
    "@kollavarsham/gulp-coveralls": "^0.2.9",
    "@types/chai": "^4.2.9",
    "@types/mocha": "^7.0.1",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "chai": "^4.2.0",
    "del": "^5.1.0",
    "eslint": "^6.8.0",
    "eslint-config-xo-space": "^0.24.0",
    "grunt": "^1.0.4",
    "grunt-contrib-yuidoc": "^1.0.0",
    "gulp": "^4.0.2",
    "gulp-eslint": "^6.0.0",
    "gulp-exclude-gitignore": "^1.2.0",
    "gulp-gh-pages": "^0.6.0-6",
    "gulp-grunt": "^0.5.5",
    "gulp-plumber": "^1.2.1",
    "gulp-typescript": "^6.0.0-alpha.1",
    "isparta": "^4.1.1",
    "load-grunt-tasks": "^5.1.0",
    "mocha": "^7.0.0",
    "nyc": "^15.0.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "eslintConfig": {
    "extends": "xo-space",
    "env": {
      "mocha": true
    }
  },
  "nyc": {
    "include": [
      "lib/**/*.ts",
      "lib/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "exclude": [
      "test/**/*.spec.ts",
      "gulpfile.js",
      "Gruntfile.js"
    ],
    "reporter": [
      "html",
      "lcov",
      "text-summary",
      "text"
    ],
    "temp-directory": "./coverage/.nyc_output"
  },
  "scripts": {
    "prepublishOnly": "gulp prepublish",
    "test": "TS_NODE_PROJECT=tsconfig.spec.json nyc mocha"
  },
  "license": "MIT",
  "dependencies": {},
  "stability": "experimental"
}
